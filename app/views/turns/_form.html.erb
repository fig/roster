<%= form_for @turn, html: {class: "form-inline"} do |f| %>
  <% if @turn.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@turn.errors.count, 'error') %> prohibited
        this turn from being saved:</h2>
      <ul>
      <% @turn.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if (@turn.name) or (@turn.name.nil?) %>
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control", autofocus: true %>
    <% else %>
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, class:"hidden" %>
      <p class="form-control-static"><%= @turn.name %></p>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :time_on %>
    <%= f.text_field :time_on, maxlength: 4, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :time_off %>
    <%= f.text_field :time_off, size: 4, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn" %>
  </div>
<% end %>
